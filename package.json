{
    "name": "@niellevince/smartcommit",
    "version": "1.0.0",
    "description": "AI-powered git commit message generator using Google's Gemini API with smart context analysis and conventional commit format",
    "main": "src/cli.js",
    "bin": {
        "smartc": "./src/cli.js",
        "smartcommit": "./src/cli.js"
    },
    "scripts": {
        "start": "node src/cli.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/ --ext .js",
        "lint:fix": "eslint src/ --ext .js --fix",
        "clean": "node scripts/clean.js",
        "prepare": "npm run lint && npm run test",
        "prepublishOnly": "npm run clean && npm run lint && npm run test",
        "postinstall": "echo 'SmartCommit installed successfully! Run \"smartc\" in any git repository to get started.'"
    },
    "keywords": [
        "git",
        "commit",
        "ai",
        "gemini",
        "conventional-commits",
        "cli",
        "automation",
        "developer-tools",
        "git-hooks",
        "commit-message-generator"
    ],
    "author": {
        "name": "Nielle Vince",
        "email": "your-email@example.com",
        "url": "https://github.com/niellevince"
    },
    "license": "ISC",
    "homepage": "https://github.com/niellevince/smartcommit#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/niellevince/smartcommit.git"
    },
    "bugs": {
        "url": "https://github.com/niellevince/smartcommit/issues"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=6.0.0"
    },
    "files": [
        "src/",
        "scripts/",
        "README.md",
        "LICENSE",
        "ARCHITECTURE.md",
        "config.example.json"
    ],
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@google/genai": "^1.5.1",
        "inquirer": "^8.2.6",
        "simple-git": "^3.28.0"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.12"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "es2021": true,
            "jest": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    }
}